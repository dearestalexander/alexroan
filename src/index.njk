              <p class="card-text">{{ post.data.description }}</p>
              <div class="card-att flow--small">
                <span class="card-date-ctr" data-date="{{ post.data.date | postDateIso }}">
                  <time class="card-date" datetime="{{ post.data.date | postDateIso }}">
                    {{ post.data.date | postDate }}
                  </time>
                </span>
                <span class="card-auth">{{ post.data.author }}</span>
              </div>
              <div class="card-tags" data-tag="{{ post.data.hashtags }}">
                {% for x in post.data.hashtags %}
                <span class="card-tag">#{{ x }}</span>
                {% endfor %}
              </div>
          </div>
          </div>
        </a>
      </li>
    {%- endfor -%}
    </ul>
  </div>
