<section class="blog">
  <h2 class="home-h2">Blog</h2>

  <div class="posts-ftr">
      <div id="select-ctr" class="select-ctr"></div>
  </div>

  <div class="region-cards">
    <ul class="card-grid">
      {%- for post in collections.post | reverse -%}
      <li class="card flow" data-hashtags="{{ post.data.hashtags }}">
        <a class="card-inner flow--small" href="{{ post.url }}">
          <h2 class="card-title" id="{{ post.data.title}}">{{ post.data.title }}</h1>
          <div class="card-contents flow--small">  
            <div class="card-img-ctr">
              {% if post.data.image and post.data.image | trim != "" %}
              <img class="card-img" src="{{ post.data.image }}" alt=""/>
              {% endif %}
            </div>
            <div class="card-text flow--small">
              <p class="card-text">{{ post.data.description }}</p>
              <div class="card-att flow--small">
                <span class="card-date-ctr" data-date="{{ post.data.date | postDateIso }}">
                  <time class="card-date" datetime="{{ post.data.date | postDateIso }}">
                    {{ post.data.date | postDate }}
                  </time>
                </span>
                <span class="card-auth">{{ post.data.author }}</span>
              </div>
              <div class="card-tags" data-tag="{{ post.data.hashtags }}">
                {% for x in post.data.hashtags %}
                <span class="card-tag">#{{ x }}</span>
                {% endfor %}
              </div>
          </div>
          </div>
        </a>
      </li>
    {%- endfor -%}
    </ul>
  </div>
</section>